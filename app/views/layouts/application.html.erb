<!DOCTYPE html>
<html>
  <head>
    <title>EnrollChat</title>
    <%= csrf_meta_tags %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= action_cable_meta_tag %>
    <meta name="turbolinks-cache-control" content="no-cache">
    <link type="text/css" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href="https://fonts.googleapis.com/css?family=Muli" rel="stylesheet">
    <link href="https://cdn.datatables.net/1.10.16/css/dataTables.bootstrap.min.css" rel="stylesheet">
    <%= favicon_link_tag(source="Favicon.ico") %>
  </head>

<body>



  <nav class="navbar navbar-light bg-faded navbar-expand-lg white">
    <a class="navbar-brand" href="#">
      <%= image_tag image_path("EnrollChatLogo.jpg"), width: 30, height: 30, class: "d-inline-block align-top" %>
      EnrollChat
    </a>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav ml-auto nav-flex-icons">
      <li class="nav-item active">
        <!-- <i class="fa fa-home" aria-hidden="true"></i>-->
        <%= link_to 'Home', sections_path, class: 'nav-link waves-effect' %>
      </li>
      <li class="nav-item">
        <!-- <i class="fa fa-file" aria-hidden="true"></i> -->
        <%= link_to 'Reports', reports_path, class: 'nav-link waves-effect' %>
      </li>
      <% if current_user.try(:admin?) %>
        <li class="nav-item">
          <!-- <i class="fa fa-user" aria-hidden="true"></i> -->
          <%= link_to 'Users', users_path, class: 'nav-link waves-effect' %>
        </li>
<!--           <li class="nav-item">
          <%= form_tag sections_import_path, multipart: true, class: 'form-inline', id: 'update-form', remote: true do %>
              <%= file_field_tag :file, :accept => 'application/xslt+xml' %>
              <%= submit_tag "Update Sections", :class => "btn btn-white" %>
          <% end %>
          <span class="spinner"><i class="fa fa-spinner fa-pulse"></i></span>
        </li> -->
      <% end %>
      <% @terms.each do |term| %>
        <li class="nav-item">
          <%= link_to term_in_words(term.term), sections_url(term: term.term), class: 'nav-link' %>
        </li>
      <% end %>
      <li class="nav-item my-lg-0">
        <%= render 'devise/menu/login_items' %>
      </div>
    </ul>
    </div>
  </nav>
  

  <div class="container-fluid p-4">
    <%= render partial: "/layouts/alert", flash: flash %>
    <%= yield %>
    <div class="modal fade" id="comments">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title">Comments</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body" id="comments-modal-content">
            <p>Modal body text goes here.</p>
          </div>
          <!--<div class="modal-footer">-->
          <!--<button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>-->
          <!--</div>-->
        </div>
      </div>
    </div>
  </div>


</body>
</html>


