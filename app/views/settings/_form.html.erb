<%= form_with(model: setting, local: true) do |form| %>
  <% if setting.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(setting.errors.count, "error") %> prohibited this setting from being saved:</h2>

      <ul>
      <% setting.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="col-lg-12">
      <div class="card mt-3">
        <div class="card-body">
          <div class="col-lg-12 form-horizontal">
            <div class="form-group">
              <div class="row">
                <%= form.label :current_term, class: "col-sm-3 control-label" %>
                <div class="col-sm-8">
                  <%= form.number_field :current_term, class: 'form-control' %>
                </div>
              </div>
            </div>
            <div class="form-group">
              <%= submit_tag 'Save', class: 'btn btn-large deep-orange darken-2' %>
              <%= link_to 'Cancel', sections_path, class: 'btn btn-large stylish-color-dark' %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
