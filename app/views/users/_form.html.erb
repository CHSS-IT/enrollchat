<%= form_for(user) do |f| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>
      <ul>
      <% user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="col-sm-4">
    <div class="card mt-3">
      <div class="card-body">
        <div class="col-lg-12 form-horizontal">
          <div class="form-group">
            <div class="row">
              <%= f.label :first_name, class: "col-sm-3 control-label" %>
              <div class="col-sm-8">
                <%= f.text_field :first_name, class: 'form-control' %>
              </div>
            </div>
          </div>
          <div class="form-group">
            <div class="row">
              <%= f.label :last_name, class: "col-sm-3 control-label" %>
              <div class="col-sm-8">
                <%= f.text_field :last_name, class: 'form-control' %>
              </div>
            </div>
          </div>
          <div class="form-group">
            <div class="row">
              <%= f.label :email, class: "col-sm-3 control-label" %>
              <div class="col-sm-8">
                <%= f.email_field :email, class: 'form-control' %>
              </div>
            </div>
          </div>
          <div class="form-group">
            <div class="row">
              <%= f.label :username, class: "col-sm-3 control-label" %>
              <div class="col-sm-8">
                <%= f.text_field :username, class: 'form-control' %>
              </div>
            </div>
          </div>
          <div class="form-group">
            <div class="row">
              <%= f.label :admin, class: "col-sm-3 control-label" %>
              <div class="col-sm-8">
                <%= f.check_box :admin %>
              </div>
            </div>
          </div>
          <div class="form-group">
            <%= submit_tag 'Save', class: 'btn btn-large deep-orange darken-2' %>
            <%= link_to 'Cancel', users_path, class: 'btn btn-large stylish-color-dark' %>
          </div>
        </div>
      </div>
    </div>
    </div>
  </div>
<% end %>
