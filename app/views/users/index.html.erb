<span id="notice"></span>
<div class="row">
  <div class="col-sm-8">
    <h1>Users</h1>

    <table class="table table-striped table-bordered table-responsive table-sm table-hover" cellspacing="0" width="100%">
      <thead>
      <tr class="bg-info">
        <th>First Name</th>
        <th>Last Name</th>
        <th>Email</th>
        <th>User Name</th>
        <% if current_user.is_admin? %>
          <th>Admin</th>
          <th>Edit</th>
        <% end %>
      </tr>
      </thead>

      <tbody>
        <% @users.each do |user| %>
        <tr>
          <td><%= user.first_name %></td>
          <td><%= user.last_name %></td>
          <td><%= user.email %></td>
          <td><%= user.username %></td>
          <% if current_user.is_admin? %>
            <td><%= user.admin %></td>
            <td><%= link_to 'Edit', edit_user_path(user) %></td>
          <% end %>
        </tr>
      <% end %>
      </tbody>
    </table>
    <%= link_to 'Create New User', new_user_path, class: 'btn btn-large btn-primary' %>
  </div>
</div>
