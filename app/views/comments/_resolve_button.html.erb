<% if section.resolved_section %>
  <%= link_to "Resolved", toggle_resolved_section_section_path(section), class: "btn btn-success btn-sm", method: :patch, data: { turbo: true, turbo_frame: "resolved_#{section.id}" } %>
<% else %>
  <%= link_to "Mark section as resolved", toggle_resolved_section_section_path(section), class: "btn btn-primary btn-sm", method: :patch, data: { turbo: true, turbo_frame: "resolved_#{section.id}" } %>
<% end %>