<p id="notice"><%= notice %></p>

<h1>Comments</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Section</th>
      <th>Body</th>
      <th>Ancestry</th>
      <th>Ancestry depth</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @comments.each do |comment| %>
      <tr>
        <td><%= comment.user %></td>
        <td><%= comment.section %></td>
        <td><%= comment.body %></td>
        <td><%= comment.ancestry %></td>
        <td><%= comment.ancestry_depth %></td>
        <td><%= link_to 'Show', comment %></td>
        <td><%= link_to 'Edit', edit_section_comment_path(@section, comment) %></td>
        <td><%= link_to 'Destroy', comment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Comment', new_comment_path %>
