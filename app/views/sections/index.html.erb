<span id="alert-wrapper"></span>
<div class="row">
  <div class="col-sm-8">
    <h1><%= term_in_words(@term) %> Sections</h1>
    <%= form_tag sections_path, method: "get", id: "filter", class: "filter" do %>
    <%= select "section", "department", options_for_select(Section.department_list, selected: @department), { prompt: 'ALL' }, { id: 'filter-department' } %>
  <% end %>
    <span id="section-table">
      <%= render 'section_table' %>
    </span>
  </div>
  <div class="col-sm-2 bg-faded" id="comments-column">
    <h1>Placeholder for comments</h1>
  </div>
  <div class="col-sm-2 bg-yellow" id="notifications">

  </div>
</div>

<script type="application/javascript">
  $(document).ready(function() {
    $('#class-sections').DataTable( {
      stateSave: true,
    } );
  } );
</script>

<script type="text/javascript">
  $('#filter-department').change(function() {
    this.form.submit();
  });
</script>
