<p id="notice"><%= notice %></p>

<h1><%= term_in_words(@term) %> Sections</h1>

<table id="class-sections" class="table table-striped table-bordered table-responsive table-sm table-hover" cellspacing="0" width="100%">
  <thead>
    <tr class="bg-info">
      <th>Term</th>
      <th>Section</th>
      <th>Department</th>
      <th>Cross list group</th>
      <th>Course description</th>
      <th>Section number</th>
      <th>Title</th>
      <th>Credits</th>
      <th>Level</th>
      <th>Status</th>
      <th>Enrollment limit</th>
      <th>Actual enrollment</th>
      <th>Cross list enrollment</th>
      <th>Waitlist</th>
      <th>Comments</th>
    </tr>
  </thead>

  <tbody>
    <%= render @sections %>
  </tbody>
</table>

<script type="application/javascript">
  $(document).ready(function() {
    $('#class-sections').DataTable( {
      stateSave: true
    } );
  } );
</script>