<span id="alert-wrapper"></span>
<div class="row">
  <div class="col-sm-10">
    <div class="card">
      <div class="card-header">
        <h1 class="card-title"><%= term_in_words(@term) %> Sections</h1>
        <h2>Updated <%= basic_date(@updated_at) %></h2>
        <%= label_tag 'department', 'Select Department' %>
        <%= form_tag sections_path, method: "get", id: "filter", class: "col-sm-3 control-label" do %>
          <%= select "section", "department", options_for_select(Section.department_list, selected: @department), { prompt: 'ALL' }, { id: 'filter-department', class: 'form-control' } %>
        <% end %>
      </div>
      <div id="section-table" class="card-content table-full-width">
        <%= render 'section_table' %>
      </div>
    </div>
  </div>


  <div class="modal fade" id="comments">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">Modal title</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body" id="comments-modal-content">
          <p>Modal body text goes here.</p>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-primary">Save changes</button>
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        </div>
      </div>
    </div>
  </div>

  <div class="col-sm-2 bg-yellow" id="notifications">
    <%# Move this into a drop-down %>
  </div>

</div>

<script type="application/javascript">
  $(document).ready(function() {
    $('#class-sections').DataTable( {
      responsive: true,
      columnDefs: [
        { responsivePriority: 1, targets: [4] },
        { responsivePriority: 2, targets: [0,13] },
        { responsivePriority: 3, targets: [9,10,11,12] }
      ],
      stateSave: true
    } );
  } );
</script>

<script type="text/javascript">
  $('#filter-department').change(function() {
    this.form.submit();
  });
</script>
