<span id="alert-wrapper"></span>
<div class="row">
  <div class="col-sm-12">

    <div class="row py-4 px-2">
      <div class="col-lg-8 col-xs-12">
        <h1 class="card-title d-inline-block"><%= term_in_words(@term) %> Summary</h1>
      </div>
    </div>
    <div class="row">
      <div class="col-md-12">
        <div class="card mt-3">
          <div class="card-header white py-4">
            <div id="report-table" class="card-content table-full-width">
              <canvas id="lineChart" style="align: center"></canvas>
            </div>
          </div>
        </div>
      </div>
    </div>

  </div>
</div>

<script type="application/javascript">
  //line
  var ctxL = document.getElementById("lineChart").getContext('2d');
  var myLineChart = new Chart(ctxL, {
    type: 'line',
    data: {
      labels: <%= version_date_strings %>,
      datasets: [
        {
          label: "Waitlist",
          backgroundColor: "rgba(255,215,0,0.2)",
          strokeColor: "rgba(205,151,187,1)",
          pointColor: "rgba(205,151,187,1)",
          pointStrokeColor: "#fff",
          pointHighlightFill: "#fff",
          pointHighlightStroke: "rgba(151,187,205,1)",
          data: <%= waitlist_history %>
        },
        {
          label: "Crosslist Enrollment",
          backgroundColor : "rgba(0,191,255,0.2)",
          borderWidth : 2,
          borderColor : "",
          pointBackgroundColor : "",
          pointBorderColor : "",
          pointBorderWidth : 1,
          pointRadius : 4,
          pointHoverBackgroundColor : "#fff",
          pointHoverBorderColor : "",
          data: <%= cross_list_enrollment_history %>
        },
        {
          label: "Actual Enrollment",
          backgroundColor : "rgba(0,128,0,0.2)",
          borderWidth : 2,
          borderColor : "",
          pointBackgroundColor : "",
          pointBorderColor : "",
          pointBorderWidth : 1,
          pointRadius : 4,
          pointHoverBackgroundColor : "#fff",
          pointHoverBorderColor : "",
          data: <%= actual_enrollment_history %>
        },
        {
          label: "Enrollment Limit",
          backgroundColor: "rgba(151,187,205,0.1)",
          borderWidth : 2,
          borderColor : "",
          pointBackgroundColor : "",
          pointBorderColor : "",
          pointBorderWidth : 1,
          pointRadius : 4,
          pointHoverBackgroundColor : "#fff",
          pointHoverBorderColor : "",
          data: <%= enrollment_limit_history %>
        }
      ]
    },
    options: {
      responsive: true
    }
  });
</script>
